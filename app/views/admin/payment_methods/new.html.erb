<div class="container">
  <h5 class="mt-3">Novo meio de pagamento</h5>
  <%= link_to "Voltar", root_path , class: "btn btn-primary btn-sm btn-warning"%>
  <div class="d-flex flex-column align-items-center justify-content-center card form-container">
    <%= form_with model: [:admin, @payment_method] do |form| %>
      <dl>
        <dt><%= form.label :name %></dt>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1" >Digite no formato: Código - Banco</span>
          </div>
          <%= form.text_field :name, placeholder: "100 - Banco Laranja" %>
        </div>
         <dt><%= form.label :payment_fee %></dt>
          <dd><%= form.number_field :payment_fee, min: 0, max: 100, step: 0.1 %></dd>
         <dt><%= form.label :max_pay_fee %></dt>
          <dd><%= form.number_field :max_pay_fee, min: 0, max: 100, step: 0.1 %></dd>
         <dt><%= form.label :payment_type %></dt>
          <dd><%= form.select :payment_type, [['Boleto', :boleto_bancario], ['Cartão', :cartao_de_credito], ['PIX', :pix]], include_blank: true %></dd>
         <dt><%= form.label :status %></dt>
          <dd><%= form.select :status, [['Ativo', :ativo], ['Inativo', :inativo]] %></dd>
      </dl>
      <%= form.submit t('.submit'), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
