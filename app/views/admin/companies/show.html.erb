<div class="container" style="height:100%;">
    <h5 style="margin-top:2rem">Detalhes do cliente</h5>
    <%= link_to "Voltar", :back, class: "btn btn-primary btn-sm btn-warning" %>
    <%= link_to "Editar cadastro",edit_admin_company_path(@company), class: "d-flex align-items-start btn btn-primary btn-sm btn-info", style: "width:6.9rem" %>

   <div class="d-flex align-items-end" style="margin-top:1rem;font-size:.8rem">
        <table class="table table-striped table-hover" style="overflow-y:scroll;">
              <thead>
                <tr class="table-success">
                    <th scope="col">Nome Fantasia</th>
                    <th scope="col">CNPJ</th>
                    <th scope="col">Razão Social</th>
                    <th scope="col">Endereço de cobrança</th>
                </tr>
            </thead>
            <tbody>
                <td><%= @company.fantasy_name %></td>
                <td><%= @company.cnpj %></td>
                <td><%= @company.corporate_name %></td>
                <td><%= @company.billing_address %></td>
            </tbody>
            <thead>
                <tr class="table-success">
                    <th scope="col">Email de cobrança</th>
                    <th scope="col">Email do administrador</th>
                    <th scope="col">Token</th>
                    <th scope="col">Situação cadastral</th>
                </tr>
            </thead>
            <tbody>
                <td><%= @company.billing_email %></td>
                <td><%= @company.company_admin_email %></td>
                <td><%= @company.company_token %></td>
                <td><%= @company.status %></td>
            </tbody>
        </table>
    </div>
    <%= button_to "Renovar Token", update_token_admin_company_path(@company), method: :put, data: { confirm: 'Tem certeza?' }, class: "btn btn-primary btn-sm btn-danger"%>
</div>