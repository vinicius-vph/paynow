<div class="container">
  <h5 class="mt-3">Detalhes do cliente</h5>
  <%= link_to "Voltar", root_path, class: "btn btn-primary btn-sm btn-warning" %>
  <%= link_to "Editar cadastro",edit_admin_company_path(@company), class: "d-flex align-items-start btn btn-primary btn-sm btn-info mt-2 btn-edit" %>

  <div class="d-flex align-items-end mt-3">
    <table class="table table-striped table-hover">
      <thead>
        <tr class="table-success">
          <th scope="col">Nome Fantasia</th>
          <th scope="col">CNPJ</th>
          <th scope="col">Razão Social</th>
          <th scope="col">Endereço de faturamento</th>
        </tr>
      </thead>
      <tbody>
        <td><%= @company.fantasy_name %></td>
        <td><%= @company.cnpj %></td>
        <td><%= @company.corporate_name %></td>
        <td><%= @company.billing_address %></td>
      </tbody>
      <thead>
        <tr class="table-success">
          <th scope="col">Email de faturamento</th>
          <th scope="col">Email do administrador</th>
          <th scope="col">Token</th>
          <th scope="col">Situação cadastral</th>
        </tr>
      </thead>
      <tbody>
        <td><%= @company.billing_email %></td>
        <td><%= @company.company_admin_email %></td>
        <td><%= @company.company_token %></td>
        <td><%= @company.status %></td>
      </tbody>
    </table>
  </div>
  <%= button_to "Renovar Token", update_token_admin_company_path(@company), method: :put, data: { confirm: 'Tem certeza?' }, class: "btn btn-primary btn-sm btn-danger"%>
</div>
