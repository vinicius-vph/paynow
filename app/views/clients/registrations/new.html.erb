<section class="container d-flex flex-column align-items-center justify-content-center">
  <h3><%= t('.title') %></h3>
  <div class="card d-flex flex-column align-items-center justify-content-around">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "clients/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :company_id %><br />
        <%= f.collection_select :company_id, Company.where(status: :ativo).sort, :id, :fantasy_name %>
      </div>

      <div class="actions">
        <%= f.submit t('.submit'), class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="btn-group-vertical fs-5">
      <%= render "clients/shared/links" %>
    </div>
  </div>
</section>
