<section class="container d-flex flex-column align-items-center justify-content-center">
  <h2>Esqueceu sua senha?</h2>
  <div class="card d-flex flex-column align-items-center justify-content-center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "clients/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Solicitar nova senha", class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="btn-group-vertical fs-5">
      <%= render "clients/shared/links" %>
    </div>
  </div>
</section>
